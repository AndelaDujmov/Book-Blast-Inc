@page
@using Microsoft.EntityFrameworkCore
@model BookBlastInc.Web.Pages.BookPages.GetBooksByCategory

<nav class="navbar navbar-expand-lg bg-light" data-bs-theme="light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link active" asp-page="">Home
                        <span class="visually-hidden">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">All Books</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">Action</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <a class="dropdown-item" href="#">Something else here</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Separated link</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/ShoppingCartPages/Index">Shopping Cart</a>
                </li>
            </ul>
            <form class="d-flex">
                <input class="form-control me-sm-2" type="search" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </div>
     <partial name="_LoginPartial"/>
</nav>

<div class="row pb-3">
    @foreach (var book in Model.Books)
    {
        <div class="col-lg-6 col-sm-6">
            <div class="row p-2">
                <div class="col-4 p-1">
                    <div class="card border-0 shadow border-5 rounded">
                        <img height="220px" width="160px" src="@book.PhotoUrl" class="card-img-top rounded" />
                        <div class="card-body pb-0">
                            <div class="p-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@book.Name</p>
                                <p class="card-title text-warning text-center">by @foreach (var aut in book.AuthorNames)
                                                                                  {
                                                                                      <b>@aut</b>
                                                                                  }</p>
                            </div>
                            <div class="p-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@book.Price.ToString("c")</p>
                            </div>
                        </div>
                        <a  asp-page="/BookPages/BookDetails" asp-route-id="@book.Id" class="btn btn-primary mx-2">Details</a>
                    </div>
                </div>
               
            </div>
        </div>
    }
</div>